    .modal-content-wrapper
      .modal-content
        .modal-header
          h5#exampleModalLiveLabel.modal-title Modal title
          a(href="#" data-dismiss='modal', aria-label='Close').close
            span(aria-hidden='true') ×
        .modal-body
          p Woohoo, you're reading this text in a modal!
